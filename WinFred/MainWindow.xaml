<Window x:Class="James.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControls="clr-namespace:James.UserControls"
        xmlns:helper="clr-namespace:James.HelperClasses" Width="700" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" Opacity="0.9" SizeToContent="Height"
        ShowInTaskbar="False" Loaded="Window_Loaded" Deactivated="Window_Deactivated"
        BorderBrush="#FF777777" BorderThickness="1">
    <Grid helper:GridHelper.RowDefinition="100|a|a">
        <TextBox Grid.Row="0" x:Name="SearchTextBox" Margin="0" HorizontalAlignment="Stretch"
                 VerticalAlignment="Top" FontSize="55" VerticalContentAlignment="Center" Padding="10,0,10,10"
                 Foreground="#FF383838" MaxLines="1" Height="100" TextChanged="SearchTextBox_TextChanged"
                 PreviewKeyDown="SearchTextBox_PreviewKeyDown" MaxLength="100"
                 BorderBrush="{x:Null}" BorderThickness="0" UndoLimit="0" VerticalScrollBarVisibility="Disabled" />
        <userControls:SearchResultUserControl x:Name="searchResultControl" Grid.Row="2" />
    </Grid>
</Window>