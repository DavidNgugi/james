<UserControl x:Class="WinFred.OptionControls.SearchUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="600" Width="800">
    <Grid>
        <WrapPanel>
            <GroupBox Header="Folders to be searched" Width="400">
                <StackPanel>
                    <ListBox x:Name="PathListBox" Height="400" Margin="20">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=Location}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <WrapPanel>
                        <Button x:Name="AddFolderButton" Content="Add Folder" Width="194" Click="AddFolderButton_Click"/>
                        <Button x:Name="RemoveFolderButton" Content="Remove Folder" Width="194" Click="RemoveFolderButton_Click"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Index Settings" Width="400">
                <StackPanel>
                    <Button x:Name="RebuildIndexButton" Content="Rebuild Index" Click="RebuildIndexButton_Click"/>
                </StackPanel>
            </GroupBox>
        </WrapPanel>
    </Grid>
</UserControl>
