<UserControl x:Class="WinFred.UserControls.GeneralUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:helper="clr-namespace:WinFred.HelperClasses"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <Grid helper:GridHelper.ColumnDefinition="*|*">
        <GroupBox Header="General Settings" Grid.Column="0">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Height" Value="Auto" />
                    </Style>
                </StackPanel.Resources>
                <Grid helper:GridHelper.ColumnDefinition="2*|1*">
                    <TextBlock Grid.Column="0">
                        <Run Text="Start with windows:" />
                    </TextBlock>
                    <controls:ToggleSwitch Grid.Column="1" IsChecked="{Binding Path=StartProgramOnStartup}" />
                </Grid>
                <Grid helper:GridHelper.ColumnDefinition="2*|1*">
                    <TextBlock Grid.Column="0">
                        <Run Text="Count for displayed search results" />
                    </TextBlock>
                    <controls:NumericUpDown Grid.Column="1"
                                            Value="{Binding Path=MaxSearchResults, UpdateSourceTrigger=LostFocus}" />
                </Grid>
                <Grid helper:GridHelper.ColumnDefinition="2*|1*">
                    <TextBlock Grid.Column="0">
                        <Run Text="Limit to start with searching" />
                    </TextBlock>
                    <controls:NumericUpDown Grid.Column="1"
                                            Value="{Binding Path=StartSearchMinTextLength, UpdateSourceTrigger=LostFocus}" />
                </Grid>
                <Grid helper:GridHelper.ColumnDefinition="2*|1*">
                    <TextBlock Grid.Column="0">
                        <Run Text="Window Accent Color" />
                    </TextBlock>
                    <ComboBox x:Name="AccentColorComboBox" Grid.Column="1" Text="{Binding Path=WindowAccentColor}" />
                </Grid>
                <Grid helper:GridHelper.ColumnDefinition="2*|1*">
                    <TextBlock Grid.Column="0">
                        <Run Text="BaseColor:" />
                    </TextBlock>
                    <controls:ToggleSwitch Grid.Column="1" IsChecked="{Binding Path=IsBaseLight}" OnLabel="light"
                                           OffLabel="dark" />
                </Grid>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="1">
            <GroupBox Header="Import / Export">
                <Grid helper:GridHelper.ColumnDefinition="1*|1*">
                    <Button Grid.Column="0" Content="Export Config" Style="{DynamicResource SquareButtonStyle}" />
                    <Button Grid.Column="1" Content="Import Config" Style="{DynamicResource SquareButtonStyle}" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>